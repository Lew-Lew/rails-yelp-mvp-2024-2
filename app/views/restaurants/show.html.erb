<h1><%= @restaurant.name %></h1>

<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>

<%= link_to "back", restaurants_path %> | <%= link_to "Add a review",  new_restaurant_review_path(@restaurant) %>

<h2 class="mt-5">Reviews</h2>

<% @restaurant.reviews.each do |review| %>
   <p><%= review.content %> | <%= review.rating %> / 5</p>
<% end %>

<h2 class="text-center my-5">Add a review</h2>

<div class="w-50 mx-auto">
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating %>
    <%= f.submit "Add a review", class: "btn btn-primary" %>
  <% end %>
</div>
